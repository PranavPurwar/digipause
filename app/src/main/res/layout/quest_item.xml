<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:foregroundGravity="center_vertical">

    <ImageView
        android:id="@+id/quest_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:paddingStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swords"
        app:tint="@color/md_theme_light_primary" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quest_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/quest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Touch Grass"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quest_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Total Reps: 69" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>